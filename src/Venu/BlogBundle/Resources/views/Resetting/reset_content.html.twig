<section id="content" class="loginbox">
<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
    {{ form_widget(form) }}
	<!--<input type="hidden" name="_target_path" value="/login" />-->
   <p class="formend">
        <input type="submit" class="submit" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}" />
    </p>
</form>
</section>
{% block javascripts %}
<script>
	$(document).ready(function(){
		$('label').first().text('New Password');
		$('label').last().text('Confirm Password');
		$('label').css({ 'display':'block', 'margin-left':'20px'});
		$('input:password').addClass('text');
		$('input:password').css({'margin-left':'20px','margin-bottom':'20px'});
		
	});
</script>
{% endblock %}